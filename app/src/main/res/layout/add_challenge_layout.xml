<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="Autofill">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/line_height"
            android:labelFor="@+id/challenge_name"
            android:text="@string/challenge_name"/>

        <EditText
            android:id="@+id/challenge_name"
            android:layout_width="130dp"
            android:inputType="text"
            android:layout_height="match_parent"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/challenge_type_label"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/line_height"
            android:labelFor="@+id/challenge_type"
            android:text="@string/challenge_type"/>

        <EditText
            android:id="@+id/challenge_type"
            android:layout_width="100dp"
            android:layout_height="@dimen/line_height"
            android:inputType="number"
             />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/challenge_rate_label"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/line_height"
            android:labelFor="@+id/challenge_rate"
            android:text="@string/challenge_rate"/>

        <EditText
            android:id="@id/challenge_rate"
            android:layout_width="100dp"
            android:layout_height="@dimen/line_height"
            android:inputType="number"/>
    </LinearLayout>
</LinearLayout>